{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Modern React boilerplate",
  "main": "index.js",
  "repository": "https://github.com/BrunoTorresF/react-boilerplate",
  "author": "Bruno Torres",
  "license": "MIT",
  "scripts": {
    "dev": "webpack --config webpack.config.js --watch --mode development",
    "frontend": "webpack-dev-server --hot --mode development --open",
    "start-dev": "nodemon server/index.js",
    "build": "webpack --config webpack.prod.js --mode production",
    "start": "node server/index.js",
    "heroku-postbuild": "npm run build:prod",
    "build:prod": "webpack -p --env production"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "bulma": "^0.7.4",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "mysql2": "^1.6.5",
    "nodemon": "^1.18.11",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "^4.7.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  }
}
